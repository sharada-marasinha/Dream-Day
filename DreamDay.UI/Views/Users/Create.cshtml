@model DreamDay.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Create New User";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @* No need for Hidden Id on Create form *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="Enter user's full name" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger d-block mt-1"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="user@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger d-block mt-1"></span>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3 text-muted">Set Password</h5>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter a strong password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger d-block mt-1"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm the password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger d-block mt-1"></span>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3 text-muted">Assign Role</h5>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-check-fill"></i></span>
                                <select asp-for="Role" class="form-select">
                                    @* Use form-select for BS5 *@
                                    <option value="">-- Select Role --</option>
                                    <option value="User">User (Client/Couple)</option>
                                    <option value="Admin">Administrator</option>
                                    <option value="Supplier">Supplier/Vendor</option>
                                    @* Populate dynamically if roles are managed elsewhere *@
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="text-danger d-block mt-1"></span>
                        </div>

                        <hr class="my-4" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                @* Assuming Index is the user list page *@
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-person-plus me-1"></i>Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        .input-group-text {
            min-width: 40px; /* For icon alignment */
            justify-content: center;
        }

        .card-header h4 {
            font-size: 1.25rem; /* Adjust header size if needed */
        }

        .text-danger {
            font-size: 0.875em; /* Slightly smaller validation messages */
        }
    </style>
}