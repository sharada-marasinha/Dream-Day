@{
    ViewData["Title"] = "Wedding Bliss - Your Perfect Wedding Planner";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-section rounded-4 p-5 bg-primary text-white py-5">
        <div class="container-fluat py-5">
            <h1 class="display-3 fw-bold mb-4">Your Dream Wedding Starts Here</h1>
            <p class="lead mb-5">Plan your perfect day with our all-in-one wedding management platform</p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <button type="button" class="btn btn-light btn-lg px-4">Get Started</button>
                <button type="button" class="btn btn-outline-light btn-lg px-4">Learn More</button>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container my-5">
        <h2 class="text-center mb-5">Everything You Need in One Place</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-primary">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check fs-1 text-primary mb-3"></i>
                        <h3 class="card-title">Guest Management</h3>
                        <p class="card-text">Track RSVPs, meal preferences, and send digital invitations all in one place.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-primary">
                    <div class="card-body text-center">
                        <i class="bi bi-cash-coin fs-1 text-primary mb-3"></i>
                        <h3 class="card-title">Budget Planner</h3>
                        <p class="card-text">Stay on track with our comprehensive budget tracking tools.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-primary">
                    <div class="card-body text-center">
                        <i class="bi bi-geo-alt fs-1 text-primary mb-3"></i>
                        <h3 class="card-title">Vendor Directory</h3>
                        <p class="card-text">Find and connect with trusted local wedding vendors.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 1.5rem;">1</div>
                        <h4 class="my-3">Create Your Wedding</h4>
                        <p>Set your date, location, and wedding style preferences.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 1.5rem;">2</div>
                        <h4 class="my-3">Customize Your Plan</h4>
                        <p>Add vendors, guests, and manage all wedding details.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 1.5rem;">3</div>
                        <h4 class="my-3">Enjoy Your Big Day</h4>
                        <p>Relax knowing everything is organized and taken care of.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials -->
    <div class="container">
        <h2 class="text-center mb-5">What Couples Say</h2>
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>"This platform made wedding planning so much easier! We could track everything in one place."</p>
                            <footer class="blockquote-footer">Sarah & Michael, June 2023</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>"The vendor directory saved us so much time. We found our perfect photographer through the platform."</p>
                            <footer class="blockquote-footer">Jessica & David, September 2023</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-primary text-white py-5">
        <div class="container text-center">
            <h2 class="mb-4">Ready to Plan Your Perfect Wedding?</h2>
            <p class="lead mb-4">Join thousands of couples who made their dream wedding a reality</p>
            <a asp-controller="Wedding" class="btn btn-light btn-lg">Start Planning Now</a>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons CSS in your layout file -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .hero-section {
        background: linear-gradient(rgba(13, 110, 253, 0.8), rgba(13, 110, 253, 0.9)), url('https://images.unsplash.com/photo-1519225421980-715cb0215aed?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
    }

    .card.border-primary:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 10px 20px rgba(13, 110, 253, 0.1);
    }
</style>