@{
    ViewData["Title"] = "Booking Requests";
    Layout = "_Layout"; // Your vendor layout
}

@if (User.IsInRole("Supplier"))
{
    <div class="container-fluid py-4">
        <!-- Header with stats -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-1">Booking Requests</h2>
                <p class="text-muted mb-0">Manage incoming wedding service requests</p>
            </div>
            <div class="d-flex">
                <div class="mr-3">
                    <select class="form-control form-control-sm">
                        <option>Last 7 days</option>
                        <option selected>Last 30 days</option>
                        <option>This Month</option>
                        <option>All Requests</option>
                    </select>
                </div>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-sync-alt mr-1"></i> Refresh
                </button>
            </div>
        </div>

        <!-- Status Tabs -->
        <ul class="nav nav-tabs mb-4" id="bookingTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pending-tab" data-toggle="tab" href="#pending">
                    Pending <span class="badge badge-primary ml-1">8</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="confirmed-tab" data-toggle="tab" href="#confirmed">
                    Confirmed <span class="badge badge-success ml-1">12</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="declined-tab" data-toggle="tab" href="#declined">
                    Declined <span class="badge badge-danger ml-1">3</span>
                </a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="bookingTabsContent">
            <!-- Pending Requests Tab -->
            <div class="tab-pane fade show active" id="pending" role="tabpanel">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Request ID</th>
                                        <th>Couple</th>
                                        <th>Wedding Date</th>
                                        <th>Service</th>
                                        <th>Requested On</th>
                                        <th>Budget</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#REQ-00528</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="https://via.placeholder.com/40" class="rounded-circle mr-2" width="32" height="32" alt="Couple">
                                                <span>Alex & Taylor</span>
                                            </div>
                                        </td>
                                        <td>15 Aug 2023</td>
                                        <td>Full Planning</td>
                                        <td>2 hours ago</td>
                                        <td>$15,000</td>
                                        <td class="text-right">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-success" data-toggle="tooltip" title="Accept">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" data-toggle="tooltip" title="Decline">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                <button class="btn btn-outline-primary" data-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#REQ-00527</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="https://via.placeholder.com/40" class="rounded-circle mr-2" width="32" height="32" alt="Couple">
                                                <span>Jordan & Casey</span>
                                            </div>
                                        </td>
                                        <td>22 Sep 2023</td>
                                        <td>Floral Design</td>
                                        <td>5 hours ago</td>
                                        <td>$3,500</td>
                                        <td class="text-right">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-success">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button class="btn btn-outline-danger">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                <button class="btn btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <nav>
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- Confirmed Tab -->
            <div class="tab-pane fade" id="confirmed" role="tabpanel">
                <div class="alert alert-info mt-3">
                    <i class="fas fa-info-circle mr-2"></i> Confirmed bookings appear here after you accept requests
                </div>
            </div>

            <!-- Declined Tab -->
            <div class="tab-pane fade" id="declined" role="tabpanel">
                <div class="alert alert-info mt-3">
                    <i class="fas fa-info-circle mr-2"></i> Declined requests appear here
                </div>
            </div>
        </div>
    </div>

    <!-- Request Detail Modal -->
    <div class="modal fade" id="requestDetailModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Request Details #REQ-00528</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <img src="https://via.placeholder.com/80" class="rounded-circle mr-3" width="60" height="60" alt="Couple">
                                <div>
                                    <h5 class="mb-0">Alex & Taylor</h5>
                                    <p class="text-muted mb-0">alex.taylor@example.com</p>
                                    <p class="text-muted mb-0">(555) 123-4567</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-light p-3 rounded">
                                <div class="d-flex justify-content-between">
                                    <span class="font-weight-bold">Wedding Date:</span>
                                    <span>15 August 2023</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="font-weight-bold">Guests:</span>
                                    <span>150</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="font-weight-bold">Budget:</span>
                                    <span>$15,000</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h6 class="mb-3">Service Details</h6>
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Full Wedding Planning</h5>
                            <p class="card-text">The couple is looking for complete wedding planning services including venue selection, vendor coordination, and day-of coordination.</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1"><span class="font-weight-bold">Venue:</span> Not selected yet</p>
                                    <p class="mb-1"><span class="font-weight-bold">Theme:</span> Modern Romantic</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><span class="font-weight-bold">Priority:</span> High</p>
                                    <p class="mb-1"><span class="font-weight-bold">Timeline:</span> 9 months</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h6 class="mb-3">Special Requests</h6>
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <p class="mb-0">"We'd love to incorporate sustainable practices throughout the wedding. Please prioritize eco-friendly vendors and minimal waste solutions."</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="vendorResponse">Your Response</label>
                        <textarea class="form-control" id="vendorResponse" rows="3" placeholder="Add any notes or questions for the couple..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger">
                        <i class="fas fa-times mr-1"></i> Decline Request
                    </button>
                    <button type="button" class="btn btn-success">
                        <i class="fas fa-check mr-1"></i> Accept Request
                    </button>
                </div>
            </div>
        </div>
    </div>

}


@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // View Details button opens modal
            $('.btn-outline-primary').click(function() {
                $('#requestDetailModal').modal('show');
            });

            // Tab persistence
            $('a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
                localStorage.setItem('lastTab', $(e.target).attr('href'));
            });

            var lastTab = localStorage.getItem('lastTab');
            if (lastTab) {
                $('[href="' + lastTab + '"]').tab('show');
            }
        });
    </script>
}

<style>
    .nav-tabs .nav-link {
        border: none;
        padding: 12px 20px;
        color: #6c757d;
        font-weight: 500;
    }

        .nav-tabs .nav-link.active {
            color: #007bff;
            border-bottom: 3px solid #007bff;
            background: transparent;
        }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
        color: #6c757d;
    }

    tr {
        transition: all 0.2s ease;
    }

        tr:hover {
            background-color: rgba(0, 123, 255, 0.03);
        }

    .badge {
        font-weight: 500;
        padding: 4px 6px;
        font-size: 11px;
    }

    .card {
        border-radius: 8px;
    }
</style>