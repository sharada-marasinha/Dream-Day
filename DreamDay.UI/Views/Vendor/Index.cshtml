@{
    ViewData["Title"] = "Vendor Dashboard";
}
@if (User.IsInRole("Supplier"))
{
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Vendor Dashboard</h2>

        </div>

        <!-- Stats Cards Row -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3 mb-md-0">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small">Total Bookings</h6>
                                <h3 class="mb-0">24</h3>
                            </div>
                            <i class="fas fa-calendar fa-2x opacity-50"></i>
                        </div>
                        <p class="small mb-0 mt-2"><i class="fas fa-arrow-up mr-1"></i>5% from last month</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3 mb-md-0">
                <div class="card border-0 shadow-sm bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small">Upcoming</h6>
                                <h3 class="mb-0">8</h3>
                            </div>
                            <i class="fas fa-bell fa-2x opacity-50"></i>
                        </div>
                        <p class="small mb-0 mt-2">Next in 3 days</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3 mb-md-0">
                <div class="card border-0 shadow-sm bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small">Revenue</h6>
                                <h3 class="mb-0">$12,450</h3>
                            </div>
                            <i class="fas fa-dollar-sign fa-2x opacity-50"></i>
                        </div>
                        <p class="small mb-0 mt-2"><i class="fas fa-arrow-up mr-1"></i>15% from last month</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small">Tasks</h6>
                                <h3 class="mb-0">5</h3>
                            </div>
                            <i class="fas fa-tasks fa-2x opacity-50"></i>
                        </div>
                        <p class="small mb-0 mt-2">3 high priority</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Bookings Table -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">Upcoming Bookings</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Couple</th>
                                <th>Date</th>
                                <th>Service</th>
                                <th>Status</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John & Jane</td>
                                <td>May 30, 2023</td>
                                <td>Full Planning</td>
                                <td><span class="badge badge-success">Confirmed</span></td>
                                <td class="text-right">
                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Michael & Sarah</td>
                                <td>June 5, 2023</td>
                                <td>Floral Design</td>
                                <td><span class="badge badge-warning">Pending</span></td>
                                <td class="text-right">
                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                </td>
                            </tr>
                            <tr>
                                <td>David & Emily</td>
                                <td>June 12, 2023</td>
                                <td>Catering</td>
                                <td><span class="badge badge-info">Deposit Paid</span></td>
                                <td class="text-right">
                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Activity Section -->
        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Recent Messages</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action border-0">
                                <div class="d-flex align-items-center">
                                    <div class="mr-3">
                                        <div class="bg-primary rounded-circle p-2 text-white">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Sarah Johnson</h6>
                                        <p class="small mb-0 text-muted">Hi, I wanted to ask about availability...</p>
                                    </div>
                                    <div class="ml-auto text-right">
                                        <small class="text-muted">2h ago</small>
                                    </div>
                                </div>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0">
                                <div class="d-flex align-items-center">
                                    <div class="mr-3">
                                        <div class="bg-info rounded-circle p-2 text-white">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Robert Chen</h6>
                                        <p class="small mb-0 text-muted">Thank you for the proposal...</p>
                                    </div>
                                    <div class="ml-auto text-right">
                                        <small class="text-muted">1d ago</small>
                                    </div>
                                </div>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0">
                                <div class="d-flex align-items-center">
                                    <div class="mr-3">
                                        <div class="bg-success rounded-circle p-2 text-white">
                                            <i class="fas fa-building"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Wedding Planning Co.</h6>
                                        <p class="small mb-0 text-muted">We have a new client who needs...</p>
                                    </div>
                                    <div class="ml-auto text-right">
                                        <small class="text-muted">2d ago</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Quick Stats</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="text-primary mb-1">15</h3>
                                    <small class="text-muted">This Month</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="text-info mb-1">32</h3>
                                    <small class="text-muted">Next Month</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="text-success mb-1">84%</h3>
                                    <small class="text-muted">Booking Rate</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="text-warning mb-1">4.8</h3>
                                    <small class="text-muted">Avg. Rating</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger mt-5" role="alert">
        <h4 class="alert-heading"><i class="bi bi-shield-lock me-2"></i>Access Denied</h4>
        <p>You don't have permission to access this page. Only Vendor can Navigate this page.</p>
        <hr>
        <p class="mb-0">If you believe this is an error, please contact your system administrator.</p>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Card hover effect
            $('.card').hover(
                function() {
                    $(this).addClass('shadow');
                },
                function() {
                    $(this).removeClass('shadow');
                }
            );

            // Mark notifications as read when clicked
            $('.list-group-item-action').click(function() {
                $(this).addClass('bg-light');
            });
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: all 0.2s ease;
        border-radius: 8px;
    }

    .badge {
        font-weight: 500;
        padding: 5px 8px;
        font-size: 12px;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
        color: #6c757d;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>